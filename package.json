{
  "name": "markdownapp",
  "version": "1.0.0",
  "main": "electron/main.js",
  "description": "Spruce (Markdown App), write in a neat and smart way",
  "scripts": {
    "start:electron": "electron .",
    "start:nextdev": "next dev",
    "start:electrondev": "npx electronmon .",
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others  \"yarn run start:nextdev\" \"yarn run start:electrondev\"",
    "start": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others  \"yarn run start:nextdev\" \"yarn run start:electron\"",
    "build": "next build && electron-builder",
    "build:next": "next build",
    "lint": "next lint"
  },
  "electronmon": {
    "patterns": [
      "!electron/recentFile.txt"
    ]
  },
  "author": "Spruce Emmanuel",
  "license": "MIT",
  "dependencies": {
    "@codemirror/commands": "^6.3.2",
    "@codemirror/lang-markdown": "^6.2.3",
    "@codemirror/language": "^6.9.3",
    "@codemirror/state": "^6.3.3",
    "@codemirror/view": "^6.22.2",
    "@codesandbox/sandpack-react": "^2.10.0",
    "@lezer/common": "^1.1.2",
    "@lezer/highlight": "^1.2.0",
    "@lezer/markdown": "^1.2.0",
    "@uiw/codemirror-theme-okaidia": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "codemirror": "^6.0.1",
    "concurrently": "^8.2.2",
    "electron-serve": "^1.2.0",
    "electron-store": "^8.1.0",
    "micromark": "^4.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "next": "14.0.4",
    "openai": "^4.24.0",
    "react": "^18",
    "react-dom": "^18",
    "react-feather": "^2.0.10",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5"
  }
}
