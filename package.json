{
  "name": "sprucemarkdownapp",
  "version": "1.0.1",
  "main": "electron/main.js",
  "description": "Spruce (Markdown App), write in a neat and smart way",
  "scripts": {
    "start:electron": "electron .",
    "start:nextdev": "next dev",
    "start:electrondev": "npx electronmon .",
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others  \"yarn run start:nextdev\" \"yarn run start:electrondev\"",
    "build:next": "next build",
    "lint": "next lint",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "env-cmd electron-forge publish"
  },
  "electronmon": {
    "patterns": [
      "!electron/recentFile.txt",
      "!electron/help.md"
    ]
  },
  "author": "Spruce Emmanuel",
  "license": "MIT",
  "dependencies": {
    "@codemirror/commands": "^6.3.2",
    "@codemirror/lang-markdown": "^6.2.3",
    "@codemirror/language": "^6.9.3",
    "@codemirror/state": "^6.3.3",
    "@codemirror/view": "^6.22.2",
    "@lezer/common": "^1.1.2",
    "@lezer/highlight": "^1.2.0",
    "@lezer/markdown": "^1.2.0",
    "@uiw/codemirror-theme-okaidia": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "cheerio": "^1.0.0-rc.12",
    "codemirror": "^6.0.1",
    "concurrently": "^8.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "html-entities": "^2.4.0",
    "micromark": "^4.0.0",
    "micromark-extension-frontmatter": "^2.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "micromark-extension-math": "^3.0.0",
    "next": "14.0.4",
    "openai": "^4.24.0",
    "prismjs": "^1.29.0",
    "react": "^18",
    "react-dom": "^18",
    "react-feather": "^2.0.10",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/publisher-github": "^7.2.0",
    "@types/node": "^20",
    "@types/prismjs": "^1.26.3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "env-cmd": "^10.1.0",
    "typescript": "^5"
  }
}
